generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  email    String   @id @map("_id")
  name     String
  password String
  posts    Post[]
}

model Post {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String
  creator  String
  creatorUser User   @relation(fields: [creator], references: [email])
  createdat DateTime
}